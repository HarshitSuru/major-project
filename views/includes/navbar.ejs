<style>
  /* Search Button */
  .btn-search {
    background-color: #f08c5a;
    color: #fff;
    border: none;
    border-radius: 25px;
    padding: 0.6rem 1.4rem;
    font-size: 1rem;
    display: flex;
    align-items: center;
    cursor: pointer;
    transition: all 0.2s ease-in-out;
  }

  .btn-search:hover {
    background-color: #fff;
    color: #f08c5a;
    border: 2px solid #f08c5a;
    box-shadow: 0 2px 12px rgba(234, 153, 81, 0.2);
  }

  /* Icon inside search button */
  .btn-search i {
    margin-right: 0.5rem;
    font-size: 1rem;
  }

  /* Search Input */
  .search-input {
    border-radius: 25px;
    border: 2px solid #f8e8d0;
    background-color: rgba(255, 255, 255, 0.9);
    color: #5a4a42;
    padding: 0.6rem 1.2rem;
    font-size: 1rem;
    outline: none;
    transition: border-color 0.2s ease-in-out;
  }

  .search-input:focus {
    border-color: #f08c5a;
    box-shadow: 0 0 0 2px rgba(240, 140, 90, 0.2);
  }
</style>
