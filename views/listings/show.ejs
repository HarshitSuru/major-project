<% layout('/layouts/boilerplate') -%>
  <script>
    const mapToken = "<%= process.env.MAP_TOKEN %>";
    const listing =<%- JSON.stringify(listing) %>;
  </script>
  <div class="container mt-3" style="background-color: #ffe4c4; padding: 20px; border-radius: 10px;">
    <div class="row justify-content-center">
      <div class="col-md-8 text-center">
        <h1 class="display-4 text-dark">Listing Details</h1>
        <hr class="mb-4" style="border-color: #d2691e;">
      </div>
    </div>

    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="card shadow-lg border-0 rounded-lg overflow-hidden" style="background-color: #ffdab9;">
          <img src="<%= listing.image.url %>" class="card-img-top show-image" alt="listing_image">
          <div class="card-body text-center">
            <h5 class="card-title text-uppercase text-dark font-weight-bold">
              <%= listing.title %>
            </h5>
            <p class="card-text text-dark">owned by <b>
                <%= listing.owner.username %>
              </b></p>
            <p class="card-text text-dark">
              <%= listing.description %>
            </p>
            <p class="h5 text-brown font-weight-bold" style="color: #8b4513;">&#8377; <%=
                listing.price.toLocaleString("en-IN") %>
            </p>
            <p class="text-secondary">
              <i class="fas fa-map-marker-alt" style="color: #a0522d;"></i>
              <%= listing.location %>, <%= listing.country %>
            </p>
          </div>
        </div>
      </div>
    </div>

    <% if(currUser && currUser._id.equals(listing.owner._id)) { %>
      <div class="row mt-4 justify-content-center">
        <div class="col-md-6 text-center">
          <a href="/listings/<%= listing._id %>/edit" class="btn btn-outline-dark btn-lg mx-2"
            style="background-color: #d2691e; color: white;">Edit</a>
          <form method="POST" action="/listings/<%= listing._id %>?_method=delete" class="d-inline">
            <button class="btn btn-outline-dark btn-lg mx-2"
              style="background-color: #a0522d; color: white;">Delete</button>
          </form>
        </div>
      </div>
      <% } %>

        <!-- Showing the reviews -->
        <hr class="mb-4 mt-3" style="border-color: #d2691e;">
        <% if(listing.reviews.length) { %>
          <p><b>All Reviews</b></p>
          <div class="row">
            <% for (review of listing.reviews) { %>
              <div class="col-6 mb-3">
                <div class="card">
                  <div class="card-body">
                    <h5 class="card-title">@<%= review.author.username %>
                    </h5>
                    <p class="starability-result" data-rating="<%= review.rating %>"></p>
                    <p class="card-text">
                      <%= review.comment %>
                    </p>
                  </div>
                  <% if(currUser && currUser._id.equals(review.author._id)) { %>
                    <form method="POST" action="/listings/<%=listing._id%>/reviews/<%= review._id %>?_method=DELETE">
                      <button class="btn btn-sm btn-outline-dark mb-3 ms-3">Delete</button>
                    </form>
                    <% } %>
                </div>
              </div>
              <% } %>
          </div>
          <% } else { %>
            <div class="row mt-4 justify-content-center">
              <div class="col-md-6 text-center">
                <h5>No reviews yet. Be the first to leave a review!</h5>
              </div>
            </div>
            <% } %>

              <!-- Leave a Review Form -->
              <% if(currUser && !currUser._id.equals(listing.owner._id)) { %>
                <div class="row mt-4 justify-content-center">
                  <div class="col-md-8">
                    <hr class="mb-4" style="border-color: #d2691e;">
                    <h4 class="text-center">Leave a Review</h4>
                    <form action="/listings/<%= listing.id %>/reviews" method="POST" novalidate
                      class="needs-validation">
                      <div class="mb-3 mt-3">
                        <fieldset class="starability-slot">
                          <legend class="visually-hidden">Rate this listing</legend>
                          <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="0" checked
                            aria-label="No rating." />
                          <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                          <label for="first-rate1" title="Terrible">1 star</label>
                          <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                          <label for="first-rate2" title="Not good">2 stars</label>
                          <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                          <label for="first-rate3" title="Average">3 stars</label>
                          <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                          <label for="first-rate4" title="Very good">4 stars</label>
                          <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                          <label for="first-rate5" title="Amazing">5 stars</label>
                        </fieldset>
                      </div>

                      <div>
                        <label class="form-label" for="comment">
                          <h5>Comments</h5>
                        </label>
                        <textarea class="form-control" name="review[comment]" placeholder="Add your comment..."
                          id="comment" cols="30" rows="5" required></textarea>
                        <div class="invalid-feedback">You can submit only after adding your review.</div>
                      </div>

                      <div class="text-center">
                        <button class="btn btn-outline-dark mt-3" style="background-color: #d2691e;">Submit</button>
                      </div>
                    </form>
                  </div>
                </div>
                <% } %>

                  <!-- Map -->
                  <hr class="mb-3" style="border-color: #d2691e;">
                  <div class="col-6 offset-3 mb-3">
                    <h4 class="text-center">Location on Map</h4>
                    <div id="map"></div>
                  </div>
  </div>


  <script src="/js/map.js"></script>